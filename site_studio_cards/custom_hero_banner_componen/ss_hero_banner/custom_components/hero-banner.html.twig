
{% set styles %}
    <style>
        .cstm-hero {
            background-image: url({{ field.cc_bg_image }});
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            height: 100vh;
            width: 100%;
            position: relative;
            
        }

        .cstm-hero:after {
                background-color: rgba(0, 0, 0, 0.5);
                content: '';
                height: 100%;
                left: 0;
                position: absolute;
                top: 0;
                width: 100%;

            }
        .cstm-hero-content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: 100%;
            width: 100%;
            position: relative;
            z-index:1;
        }
        .cstm-hero-title {
            color: #fff;
            font-size: 3rem;
            font-weight: 700;
            margin: 0;
            text-align: center;
        }
        .cstm-hero-subtitle {
            color: #fff;
            font-size: 1.5rem;
            font-weight: 400;
            margin-top: 30px;
            text-align: center;
        }
    </style>
{% endset %}


{% block content %}
    <div class="cstm-hero-container"> 
        <div class="cstm-hero">
            <div class="cstm-hero-content">
                <h1 class="cstm-hero-title">{{field.cc_heading}}</h1>
                <div class="cstm-hero-subtitle">{{ format_wysiwyg(field.cc_body['#text'], field.cc_body['#textFormat'], '') }}</div>
            </div>
        </div>
    </div>
{% endblock %}

{{ renderInlineStyle(styles) }}
